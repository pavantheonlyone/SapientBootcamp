<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>03 Product Manager Web App</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/pages/index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>price-form</servlet-name>
  	<jsp-file>/WEB-INF/pages/price-form.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>price-form</servlet-name>
  	<url-pattern>/price-form</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>home</servlet-name>
  	<jsp-file>/WEB-INF/pages/home.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>home</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>add-new-product-form</servlet-name>
  	<jsp-file>/WEB-INF/pages/add-new-product-form.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>add-new-product-form</servlet-name>
  	<url-pattern>/add-new-product-form</url-pattern>
  </servlet-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/WEB-INF/pages/404.jsp</location>
  </error-page>
  
  <error-page>
  	<exception-type>java.lang.Exception</exception-type>
  	<location>/WEB-INF/pages/exception.jsp</location>
  </error-page>
  
  
</web-app>